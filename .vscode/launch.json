{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Debug Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      },
      // Optional: source maps support
      "outFiles": ["${workspaceFolder}/.next/**/*.js"]
    }
  ]
}
